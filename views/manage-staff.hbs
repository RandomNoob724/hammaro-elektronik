<div class="container-fluid">
    <h1>Hantera Personal</h1>
    <table class="table table-striped col-md" id="project-table">
        <thead>
            <tr>
            <th scope="col">Titel</th>
            <th scope="col">Uppdatera</th>
            <th scope="col">Ta bort</th>
            </tr>
        </thead>
        <tbody>
            {{#if staffList.length}}
                {{#each staffList}}
                    <tr>
                        <td>{{firstName}} {{lastName}}</td>
                        <td><a href="/staff/update/{{id}}"><button class="btn btn-secondary">Uppdatera</button></a></td>
                        <td>
                            <form method="POST" action="/staff/{{id}}/delete">
                                <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                                <button class="btn btn-danger" type="submit">Ta bort</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <td>No post found</td>
            {{/if}}
        </tbody>
    </table>
</div>