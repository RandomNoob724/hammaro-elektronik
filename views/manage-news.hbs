<div class="container-fluid">
    <h1>Hantera Nyheter</h1>
    <table class="table table-striped col-md" id="project-table">
        <thead>
            <tr>
            <th scope="col">Titel</th>
            <th scope="col">Uppdatera</th>
            <th scope="col">Ta bort</th>
            </tr>
        </thead>
        <tbody>
            {{#if newsList.length}}
                {{#each newsList}}
                    <tr>
                        <td>{{title}}</td>
                        <td><a href="/news/update/{{id}}"><button class="btn btn-secondary">Uppdatera</button></a></td>
                        <td>
                            <form method="POST" action="/news/{{id}}/delete">
                                <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                                <button class="btn btn-danger" type="submit">Ta bort</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <td>No post found</td>
            {{/if}}
        </tbody>
    </table>
</div>